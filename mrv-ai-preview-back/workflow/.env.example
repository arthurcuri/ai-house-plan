# JWT Configuration para desenvolvimento
JWT_SECRET_KEY=dev-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Database Configuration - SQLite para desenvolvimento
DATABASE_URL=sqlite:///./auth.db
SQLITE_ECHO=false

# API Configuration
ENVIRONMENT=development
DEBUG=true
RATE_LIMIT_PER_MINUTE=120

# CORS Configuration - URLs permitidas para desenvolvimento
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:3001

# Gemini API (se usando)
GEMINI_API_KEY_LUCAS=your_gemini_api_key_here

# Logging
LOG_LEVEL=INFO
